<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Content/images/book.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trang Chủ", "IndexAdmin", "HomeAdmin", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add Chap", "CreateChapterAdmin", "ComicsAdmin")</li>
                    <li>@Html.ActionLink("Add Category", "CategoryAdmin", "ComicsAdmin")</li>
                    <li class="search">
                        @using (Html.BeginForm("IndexAdmin", "HomeAdmin", FormMethod.Get))
                        {
                        <li>
                            @Html.TextBox("searchString", null, new { placeholder = "Tìm truyện......" })<button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </li>
                    }
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle"
                               data-toggle="dropdown"
                               role="button"
                               aria-haspopup="true"
                               aria-expanded="false">
                                Thể Loại
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li><a href="@Url.Action("TheLoaiAdmin", "ComicsAdmin", new {id = category.Id})">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                    @Html.Partial("Login")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @RenderSection("upload", required: false)
        @RenderSection("count", required: false)
    </body>
</html>
<style>
    input#searchString {
        padding: 6px 9px;
        border-radius: 13px;
        border: 1px solid red;
        width: 275px;
        height: 32px;
    }

    button[type="submit"] {
        margin-left: 12px;
        width: 32px;
        height: 32px;
        border-radius: 100%;
        background-color: hotpink;
        border: 1px solid red;
        padding-top: 4px;
    }

    li.search {
        margin-top: 8px;
    }

    .navbar-inverse {
        background: linear-gradient( to left, rgba(0, 0, 255, 1) 0%,rgba(255, 83, 0, 0.8)50%, rgba(178, 34, 34, 1 ) 100%);
        padding: 5px;
    }

    a.navbar-brand {
        color: white;
    }

        a.navbar-brand:hover {
            text-shadow: red -3px 0, cyan 3px 0;
        }
</style>
